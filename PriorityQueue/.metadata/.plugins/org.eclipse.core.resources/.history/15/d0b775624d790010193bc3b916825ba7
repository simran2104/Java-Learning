package main;

public class HeapUse {
	public static void main(String[] args) {
		MinHeap minHeap = new MinHeap();
		MaxHeap maxHeap = new MaxHeap();
		
		minHeap.insert(10);
		System.out.println("After Insertion: " + minHeap.getMin());
		minHeap.insert(5);
		System.out.println("After Insertion: " + minHeap.getMin());
		minHeap.insert(34);
		System.out.println("After Insertion: " + minHeap.getMin());
		minHeap.removeMin();
		System.out.println("After Deletion: " + minHeap.getMin());
		minHeap.insert(1);
		System.out.println("After Insertion: " + minHeap.getMin());
		minHeap.insert(45);
		System.out.println("After Insertion: " + minHeap.getMin());
		minHeap.removeMin();
		System.out.println("After Deletion: " + minHeap.getMin());
		minHeap.insert(2);
		System.out.println("After Insertion: " + minHeap.getMin());
		minHeap.removeMin();
		System.out.println("After Deletion: " + minHeap.getMin());
		
		System.out.println("MaxHeap: ");
		
		

		maxHeap.insert(10);
		System.out.println("After Insertion: " + maxHeap.getMax());
		maxHeap.insert(5);
		System.out.println("After Insertion: " + maxHeap.getMax());
		maxHeap.insert(34);
		System.out.println("After Insertion: " + maxHeap.getMax());
		maxHeap.removeMax();
		System.out.println("After Deletion: " + maxHeap.getMax());
		maxHeap.insert(1);
		System.out.println("After Insertion: " + maxHeap.getMax());
		maxHeap.insert(45);
		System.out.println("After Insertion: " + maxHeap.getMax());
		maxHeap.removeMax();
		System.out.println("After Deletion: " + maxHeap.getMax());
		maxHeap.insert(2);
		System.out.println("After Insertion: " + maxHeap.getMax());
		maxHeap.removeMax();
		System.out.println("After Deletion: " + maxHeap.getMax());
	}
}
